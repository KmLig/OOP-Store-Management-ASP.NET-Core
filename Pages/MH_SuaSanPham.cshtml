@page
@using DAL;
@using Entities;
@model DoAn_LTHDT_21880067.Pages.MH_SuaSanPhamModel
@{
}
@if (@Model.sp != null)
{   
<div class="container">
    <div class="row">
        <div class="col-3 border bg-light rounded p-3">
            <div class="text-center"><b>Sửa mặt hàng</b></div>
            <form method="post">                
                <div class="form-group">
                    <label for="bienB">Nhập tên mặt hàng:</label><br>
                    <input type="text" class="form-control" name="TenMH" value="@Model.sp.TenMH">
                </div>
                <div class="form-group">
                    <label for="bienB">Hạn sử dụng:</label><br>
                    <input type="date" class="form-control" name="HanSD" value="@Model.sp.HanSD">
                </div>
                <div class="form-group">
                    <label for="bienB">Công ty sản xuất:</label><br>
                    <input type="text" class="form-control" name="CtySX" value="@Model.sp.CtySX">
                </div>
                <div class="form-group">
                    <label for="bienB">Ngày sản xuất:</label><br>
                    <input type="date" class="form-control" name="NgaySX" value="@Model.sp.NgaySX">
                </div>
                <div class="form-group">
                    <label for="bienB">Loại hàng:</label><br>
                    <select name="LoaiHang" id="LoaiHang" class="form-control">
                        @{for(int i = 0; i < @Model.dsLoaiHang.Count; i++)
                            {
                                <option value="@Model.dsLoaiHang[i]">@Model.dsLoaiHang[i]</option>
                            }
                        }   
                    </select> 
                    
                </div>
                <div class="form-group">
                    <label for="bienB">Nhập giá:</label><br>
                    <input type="number" class="form-control" name="Gia" value="@Model.sp.Gia">
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-warning mb-2" value="Sửa"><br />
                </div>
            </form>
        </div>
    </div>
</div>
}
<div class="text-danger mt-2">
@Model.Chuoi
</div>
